<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/sheet_vertical_padding"
    android:paddingHorizontal="@dimen/sheet_horizontal_padding"
    android:background="@drawable/bg_bottom_sheet"
    android:elevation="8dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_peekHeight="@dimen/sheet_peek_height"
    android:id="@+id/bottom_sheet_holder_root">

    <ImageView
        android:id="@+id/ivSheetKnob"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:src="@drawable/bg_rectangle_round"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center" />

</LinearLayout>