<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAddOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_add_output"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="@dimen/sheet_horizontal_padding"
            android:paddingVertical="@dimen/sheet_vertical_padding"/>

        <ListView
            android:id="@+id/lvAddOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddOutput"/>

</RelativeLayout>